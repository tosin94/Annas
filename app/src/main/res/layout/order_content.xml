<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/order_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="starters:"

        android:layout_marginLeft="15dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/order_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mains:"

        android:layout_below="@+id/order_txt1"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:paddingTop="15dp"
        />

    <TextView
        android:id="@+id/order_txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello:"

        android:layout_below="@+id/order_txt2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"

        />

    <TextView
        android:id="@+id/order_txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Just testing:"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/order_txt3"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        />


</RelativeLayout>